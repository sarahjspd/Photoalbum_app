
<h3>It's Time to Create a Photoalbum...</h3>

	<%= form_for @photoal, url: photoalbums_path, method: :post do |f| %>
<table class="table table-hover">
	<thead>	
		<th>Title</th>
		<th>Description</th>

	</thead>
	<tbody>
		<tr>
			<td>
			  <%= f.text_field :title %>
			</td>
			<td>
			  <%= f.text_field :description %>
			</td>
		</tr>
	</tbody>

	
</table>
	<div class="buttons">

	  <%= f.submit "Create" %>
	 </div>
	 <div class=buttons><%= link_to "Back_to_All_Photoalbums", photoalbums_path %></div>
	<% end %>
