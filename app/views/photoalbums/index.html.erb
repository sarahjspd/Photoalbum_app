
<div class="background-image-index">
<div class = "container">



<h1 class="h1-text">Photoalbum</h1>

<table class="table table-hover">
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th>Album Picture</th>
		<th>User</th>
		<th>Updated At</th>>
	</thead>
	
	<tbody>

	<% @photoal.each do |photoal| %>

		<tr>
			<td><%= photoal.title %></td>
			<td><%= photoal.description %></td>



			<td>
			<% if photoal.image.present? %>
			 <%= link_to photoalbum_path(id: photoal.id) do %>

			<%= image_tag photoal.image_url(:thumb).to_s, :size => '260x180' %>
			<% end %>
			<% else %>
			 <%= link_to photoalbum_path(id: photoal.id) do %>
			<%= image_tag ('/assets/pexels-photo-443356.jpeg'), :size => "260x180" %>
			<% end %>

			<% end %></td>






			
			<td><%= photoal.user.email %></td>
			<td><%= photoal.updated_at.localtime %></td>

		
			<td><div class="buttons"><%= link_to "View", photoalbum_path(id: photoal.id) %></div></td>
		<% if photoal.user_id == current_user.id %>
			<td><div class="buttons"><%= link_to "Edit", edit_photoalbum_path(id: photoal.id) %></div></td>
			<td><div class="buttons"><%= link_to "Delete", photoalbum_path(id: photoal.id), method: :delete %></div></td>
		<% end %>
		</tr>

	<% end %>
			
	</tbody>
		
</table>
<div class="buttons"><%= link_to "Create New Photoalbum", new_photoalbum_path %></div>

<hr>

<h3> All Photos </h3>

<table class="table table-hover">
	<thead>
		<th>Title</th>
		<th>User</th>
		<th>Updated At</th>
	</thead>
	
	<tbody>

	<% @phot.each do |phot| %>

		<tr>
			<td><%= phot.title %></td>
			<td><%= phot.photoalbum.user.email %></td>
			<td><%= phot.updated_at.localtime %></td>

			<!-- deleted the View buttons because id was nil -->
		</tr>

	<% end %>
			
	</tbody>
		
</table>



</div>
</div>
