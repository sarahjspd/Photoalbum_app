<%= flash.now[:notice] %>

<h3>Edit your photos...</h3>

	<%= form_for @phot, url: photoalbum_photo_path(photoalbum_id: @photoal.id), method: :put do |f| %>
<table class="table table-hover">
	<thead>	
		<th>Title</th>
		<th>Description</th>
		<th>Image</th>
	</thead>
	<tbody>
		<tr>
			<td>
			  <%= f.text_field :title %>
			</td>
			<td>
			  <%= f.text_field :description %>
			</td>
			<td>
			  <%= f.file_field :image %>
			</td>
		</tr>
	</tbody>

	
</table>
	<div class="buttons">

	  <%= f.submit "Update" %>
	 </div>
	 <div class=buttons><%= link_to "Back_to_All_Photos", photoalbum_path(id: @photoal.id) %></div>
	<% end %>
